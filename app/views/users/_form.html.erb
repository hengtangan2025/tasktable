<%= form_for(@user) do |f| %>
  <div class="field">
    <%= f.label :昵称 %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :邮箱 %><br>
    <%= f.text_field :mail %>
  </div>
  <div class="field">
    <%= f.label :密码 %><br>
    <%= f.text_field :password %>
  </div>
  <div class="field">
    <%= f.label :重复密码 %><br>
    <%= f.text_field :password_confirm %>
  </div>
  <div class="actions">
    <%= f.submit '创建用户'%>
  </div>
<% end %>